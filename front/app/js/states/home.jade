.home
    
    .home__title(ng-show="showTitle")
        span Tweets about {{titleText}}

    .home__map
        ui-gmap-google-map(center="map.center", zoom="map.zoom")
            ui-gmap-markers(models="markers", coords="'coords'", icon="'image'")
                ui-gmap-windows(show="'show'", doRebuildAll="true")
                    div(ng-non-bindable) {{title}}

    form.home__toolbar(ng-submit="search(true)")
        input(type="text", ng-model="city")
        button(type="submit") Search
        button(type="button", ng-click="history()") View History
